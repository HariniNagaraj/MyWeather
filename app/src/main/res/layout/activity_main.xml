<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="temp"
            type="com.example.kiran.gps.databinding.ActivityMainBinding" />
    </data>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/pullToRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background"
            tools:context=".MainActivity">

            <SearchView
                android:id="@+id/searchBar"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ListView
                android:id="@+id/list_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/searchBar"
                android:visibility="gone" />


            <TextView
                android:id="@+id/celcius"
                android:layout_width="wrap_content"
                android:layout_height="195dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="131dp"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:hint="Celsius"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="170sp" />

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="48dp"
                android:gravity="center"
                android:hint="place"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="35sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="25dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="66dp"
                android:layout_marginRight="66dp"
                android:layout_marginTop="166dp"
                app:srcCompat="@drawable/degree_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="53dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="45dp"
                    android:layout_height="39dp"
                    android:layout_alignTop="@+id/humidity"
                    android:layout_marginLeft="25dp"
                    app:srcCompat="@drawable/wind_speed_icon" />

                <TextView
                    android:id="@+id/wind"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignTop="@+id/humidity"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="7dp"
                    android:hint="wind"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="23dp"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="62dp"
                    android:layout_marginEnd="69dp"
                    android:layout_marginRight="69dp"
                    app:srcCompat="@drawable/precipitation_icon" />

                <TextView
                    android:id="@+id/humidity"
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageView3"
                    android:layout_marginLeft="-69dp"
                    android:layout_marginStart="-69dp"
                    android:layout_toEndOf="@+id/imageView3"
                    android:layout_toRightOf="@+id/imageView3"
                    android:hint="humi"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="85dp"
                    android:fontFamily="sans-serif-light"
                    android:hint="date"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="25sp" />

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</layout>